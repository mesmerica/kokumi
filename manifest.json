{
  "manifest_version": 3,
  "name": "Kokumi",
  "version": "1.0",
  "permissions": ["storage", "declarativeNetRequest"],
  "host_permissions": ["https://flavortown.hackclub.com/*"],
   "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data.json"],
      "matches": ["https://flavortown.hackclub.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://flavortown.hackclub.com/*"],
      "js": ["content.js", "theme.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}